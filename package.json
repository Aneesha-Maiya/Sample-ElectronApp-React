{
  "name": "electronreact-app",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron:serve": "npm:electron:start",
    "electron:start": "electron .",
    "dev:watch": "npx electronmon --trace-warnings .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.ElectronSample",
    "productName": "ElectronSample",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "./appIcon/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "./appIcon/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "./appIcon/icon.png"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@microsoft/signalr": "^7.0.12",
    "axios": "^1.5.1",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-tabs": "^1.0.2",
    "electronmon": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "electron": "^26.3.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.0.1"
  }
}
